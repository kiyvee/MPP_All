<p style="color: green"><%= notice %></p>

<h1>Authors</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Age</th>
  </tr>
  </thead>
  <tbody>
  <% @authors.each do |author| %>
    <tr>
      <td><%= author.name %></td>
      <td><%= author.bio %></td>
      <td class="p-2"><%= link_to "Show", author %></td>
      <td class="p-2"><%= link_to 'Edit', edit_author_path(author) %></td>
      <td class="p-2"><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= paginate @authors %>

<%= link_to "New author", new_author_path %>

<style>
    table {
        height: 200px;
    }

    .pagination {
        width: 400px;
    }

    .pagination span {
        padding: .4rem;
    }
</style>
